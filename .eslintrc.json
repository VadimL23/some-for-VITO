{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base",
		"prettier",
		"plugin:@typescript-eslint/recommended",
		"plugin:import/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"linebreak-style": 0,
		"indent": 0,
		"quotes": 0,
		"no-tabs": 0,
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never"
			}
		],
		"import/no-extraneous-dependencies": "off",
		"import/prefer-default-export": "off",
		"class-methods-use-this": 0,
		"array-callback-return": 0, // Attention!
		"prefer-arrow-callback": 0, // Attention!
		"no-restricted-syntax": 0, // Attention!
		"no-loop-func": 0, // Attention!
		"no-inner-declarations": 0, // Attention!
		"consistent-return": 0, // Attention!
		"no-unneeded-ternary": 0, // Attention!
		"max-classes-per-file": ["error", 10], // ADD new rule
		"arrow-body-style": 0, // ADD new rule
		"prefer-destructuring": 0,
		"camelcase": 0,
		"global-require": 0,
		"prefer-const": 0,
		"dot-notation": 0,
		"object-shorthand": 0,
		"@typescript-eslint/no-unused-vars": "off",
		"@typescript-eslint/no-var-requires": "off",
		"@typescript-eslint/no-unused-vars-experimental": "off",
		"@typescript-eslint/no-shadow": 1,
		"no-case-declarations": 0,
		"no-unused-vars": 0,
		"no-return-await": 0,
		"no-shadow": 0,
		"no-console": 0,
		"no-lonely-if": 0,
		"no-else-return": 0,
		"no-await-in-loop": 0,
		"no-param-reassign": 0,
		"no-underscore-dangle": 0,
		"no-nested-ternary": 0, // ADD new rule
		"no-useless-escape:": 0, // ADD new rule
		"import/no-named-as-default": 0, // ADD new rule
		"no-plusplus": 0, // ADD new rule
		"default-case": 0, // ADD new rule
		"prettier/prettier": 0, // ["error", {
		//            "endOfLine":"auto"
		//        }],
		"comma-dangle": [
			"warn",
			{
				"arrays": "always-multiline",
				"exports": "always-multiline",
				"functions": "never",
				"imports": "always-multiline",
				"objects": "never"
			}
		]
	},
	"settings": {
		"import/extensions": [".js", ".jsx", ".ts", ".tsx"],
		"import/parsers": {
			"@typescript-eslint/parser": [".ts", ".tsx"]
		},
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"],
				"paths": ["node_modules/", "node_modules/@types"],
				"typescript": {}
			}
		}
	}
}
